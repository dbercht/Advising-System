
	<div id='devise'  class='ui-corner-all' >
	<h2>Login</h2>
	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<div><%= f.label :email %><br />
		<%= f.email_field :email %></div>

		<div><%= f.label :password %><br />
		<%= f.password_field :password %></div>

		<div><%= f.submit "Sign in" %></div>
	<% end %>

	</div>

<div id="tabs" class='ui-corner-all' >
	<div id="tabs-1">
		<h3>Students</h3>
		<p>To login, use your student.umass.edu email and your 8-digit student id as a password.</p>
	</div>
	<div id="tabs-2">
		<h3>Advisors</h3>
		<p>Please follow the instructions provided to you by the system administrator.</p>
	</div>
	
</div>


